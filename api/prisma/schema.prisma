generator client {
  provider = "prisma-client-js"
  previewFeatures=["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model courses {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  courseName   String
  username     String  
  level        Int       @default(0)
  hasStarted   Boolean   @default(false)
}
